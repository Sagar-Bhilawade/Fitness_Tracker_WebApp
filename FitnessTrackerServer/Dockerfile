# Use a lightweight OpenJDK image as the base image
FROM openjdk:17-jdk-slim

#Giving Autor Name
LABEL authors="Sagar"

# Set the working directory inside the container
WORKDIR /app

# Copy the JAR file (generated by Maven) into the container
COPY target/FitnessTrackerServer-0.0.1-SNAPSHOT.jar app.jar

# Copy SQLite database file if it exists (optional)
# Ensure the database file is in your project directory
COPY fitness_tracker.db /app/fitness_tracker.db

# Expose the application port
EXPOSE 8080

# Set environment variables for the SQLite database file
ENV SPRING_DATASOURCE_URL=jdbc:sqlite:/app/fitness_tracker.db

# Command to run the Spring Boot application
ENTRYPOINT ["java", "-jar", "app.jar"]
